<%- model_class = Entrevista -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:entrevistado) %></th>
      <th><%= model_class.human_attribute_name(:entrevistador) %></th>
      <th>Data da entrevista</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @entrevistas.each do |entrevista| %>
      <tr>
        <td><%= link_to entrevista.id, entrevista_path(entrevista) %></td>
        <td><%= raw entrevista.entrevistado.link_nome %></td>
        <td><%= raw entrevista.pesquisa.link_nomes_entrevistadores %></td>
        <td><%= entrevista.data_pesquisa %></td>
        
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_entrevista_path(entrevista), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      entrevista_path(entrevista),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_entrevista_path,
            :class => 'btn btn-primary' %>
